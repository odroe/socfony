// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "echo \"No compilation required\""
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @db.Char(64)
  phone         String     @unique @db.VarChar(50)
  gender        UserGender @default(unknown)
  name          String?    @db.VarChar(100)
  avatar        String?    @db.VarChar(255)
  bio           String?    @db.Text
  birthday      Int?
  registered_at DateTime   @default(now()) @db.Timestamptz()

  @@index([name])
  @@index([birthday])
  @@index([registered_at])
  @@index([gender])
  @@map("users")
}

enum UserGender {
  woman
  man
  unknown

  @@map("user_gender")
}

model AccessToken {
  token              String   @id @db.Char(128)
  owner_id           String   @db.Char(64)
  created_at         DateTime @default(now()) @db.Timestamptz()
  expired_at         DateTime @db.Timestamptz()
  refresh_expired_at DateTime @db.Timestamptz()

  @@index([owner_id])
  @@map("access_tokens")
}
